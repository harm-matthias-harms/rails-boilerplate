.mt-4
- unless controller_name == 'sessions'
  = render_component(Common::LinkComponent, link: true, href: new_session_path(resource_name)) { t('.sign_in') }
  %br/

- if devise_mapping.registerable? && controller_name != 'registrations'
  = render_component(Common::LinkComponent, link: true, href: new_registration_path(resource_name)) { t('.sign_up') }
  %br/

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = render_component(Common::LinkComponent, link: true, href: new_password_path(resource_name)) do
    = t('.forgot_password')
  %br/

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = render_component(Common::LinkComponent, link: true, href: new_confirmation_path(resource_name)) do
    = t('.resend_confirmation')
  %br/

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
                omniauth_authorize_path(resource_name, provider),
                data: { turbo: false }
    %br/
