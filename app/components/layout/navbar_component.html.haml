%nav.navbar.bg-base-100.sticky.top-0.z-50.bg-opacity-90.backdrop-blur.shadow-sm
  .navbar-start
    = link_to Settings.app.name, root_path, class: 'btn btn-ghost'
  .navbar-end
    - if Current.user.present?
      = link_to 'Sign out', destroy_user_session_path, data: { turbo: { method: :delete } }, class: 'btn btn-ghost'
    - else
      = link_to 'Sign in', new_user_session_path, class: 'btn btn-ghost'
      = link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary'
